      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_failed",
      "label": "Complications: Failed block",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_other",
      "label": "Complications: Other",
      "type": "text",
      "required": false
    },
    {
      "name": "tolerated",
      "label": "Patient tolerated procedure",
      "type": "checkbox",
      "required": false,
      "default": false
    }
