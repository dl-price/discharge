{
  "id": "nasogastric_tube_insertion",
  "title": "Nasogastric tube insertion",
  "category": "Procedures",
  "version": "1.0",
  "lastReviewed": "2025-12-20",
  "keywords": [
    "NGT",
    "nasogastric",
    "tube",
    "decompression"
  ],
  "fields": [
    {
      "name": "date",
      "label": "Date",
      "type": "date",
      "required": false
    },
    {
      "name": "time",
      "label": "Time",
      "type": "text",
      "required": false
    },
    {
      "name": "indication",
      "label": "Indication",
      "type": "textarea",
      "required": true
    },
    {
      "name": "tube_size",
      "label": "Tube size",
      "type": "select",
      "required": false,
      "options": [
        "8 Fr",
        "10 Fr",
        "12 Fr",
        "14 Fr",
        "16 Fr",
        "18 Fr"
      ]
    },
    {
      "name": "nostril",
      "label": "Nostril",
      "type": "select",
      "required": false,
      "options": [
        "Left",
        "Right"
      ]
    },
    {
      "name": "length_cm",
      "label": "Length inserted (cm)",
      "type": "number",
      "required": false
    },
    {
      "name": "confirm_aspirate",
      "label": "Confirmation: Aspirate obtained",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "confirm_ph",
      "label": "Confirmation: pH testing",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "confirm_xray",
      "label": "Confirmation: X-ray",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_none",
      "label": "Complications: None",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_epistaxis",
      "label": "Complications: Epistaxis",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_coiling",
      "label": "Complications: Coiling",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_failed",
      "label": "Complications: Failed attempt",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "comp_other",
      "label": "Complications: Other",
      "type": "text",
      "required": false
    },
    {
      "name": "tolerated",
      "label": "Patient tolerated procedure",
      "type": "checkbox",
      "required": false,
      "default": false
    },
    {
      "name": "plan_ready",
      "label": "Plan: Tube ready for use",
      "type": "checkbox",
      "required": false,
      "default": false
    }
  ],
  "body": "Nasogastric tube insertion note\nDate: {{date}}\nTime: {{time}}\nIndication: {{indication}}\nTube size: {{tube_size}}\nNostril: {{nostril}}\n{{#if length_cm}}Length inserted: {{length_cm}} cm\n{{/if}}\nProcedure:\n- Tube inserted using lubrication and standard technique\n\nConfirmation of placement:\n{{#if confirm_aspirate}}- Aspirate obtained\n{{/if}}{{#if confirm_ph}}- pH testing performed\n{{/if}}{{#if confirm_xray}}- X-ray confirmation\n{{/if}}\nComplications:\n{{#if comp_none}}- None\n{{/if}}{{#if comp_epistaxis}}- Epistaxis\n{{/if}}{{#if comp_coiling}}- Coiling\n{{/if}}{{#if comp_failed}}- Failed attempt\n{{/if}}{{#if comp_other}}- Other: {{comp_other}}\n{{/if}}\n{{#if tolerated}}Patient tolerated procedure.\n{{/if}}\nPlan:\n{{#if plan_ready}}- Tube ready for use\n{{/if}}"
}
